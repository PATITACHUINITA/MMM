import flet as ft

page.title = "App de Saludo y Despedida"     # Título de la ventana
page.horizontal_alignment = ft.CrossAxisAlignment.CENTER  # Centrar en horizontal
page.vertical_alignment = ft.MainAxisAlignment.CENTER    # Centrar en vertical
page.theme_mode = ft.ThemeMode.LIGHT         # Tema claro
page.bgcolor = "#F0F8FF"                     # Fondo azul muy claro

mensaje = ft.Text(
    value="Presiona un botón 👇",
    size=24,
    weight=ft.FontWeight.BOLD,
    color="black"
)

def saludar(e):
    mensaje.value = "¡Hola! 😃 Bienvenido a la app"
    mensaje.color = "#008000"   # Verde
    page.update()               # Actualiza la UI

def despedir(e):
    mensaje.value = "¡Adiós! 👋 Que tengas un gran día"
    mensaje.color = "#FF4500"   # Naranja
    page.update()               # Actualiza la UI

btn_saludo = ft.ElevatedButton(
    text="Saludar",
    icon=ft.icons.SENTIMENT_SATISFIED,    # Icono carita feliz
    style=ft.ButtonStyle(
        bgcolor={"": "#4CAF50"},          # Fondo verde
        color={"": "white"},              # Texto blanco
        padding=20,                       # Espaciado interno
        shape=ft.RoundedRectangleBorder(radius=15)  # Bordes redondeados
    ),
    on_click=saludar                      # Acción al hacer clic
)
btn_despedida = ft.ElevatedButton(
    text="Despedirse",
    icon=ft.icons.WAVING_HAND,            # Icono de mano saludando
    style=ft.ButtonStyle(
        bgcolor={"": "#FF5722"},          # Fondo naranja
        color={"": "white"},              # Texto blanco
        padding=20,
        shape=ft.RoundedRectangleBorder(radius=15)
    ),
    on_click=despedir                     # Acción al hacer clic
)
page.add(
    mensaje,   # El texto
    ft.Row(
        [btn_saludo, btn_despedida],      # Los dos botones
        alignment=ft.MainAxisAlignment.CENTER,  # Centrar
        spacing=30                         # Espacio entre botones
    )
)

ft.app(target=main)